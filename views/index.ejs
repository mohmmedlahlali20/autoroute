<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= Title %></title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Vehicles List</h1>
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover table-bordered rounded-sm">
                    <thead class="table-primary ">
                        <tr>
                            <th>ID</th>
                            <th>louee</th>
                            <th>type</th>
                            <th>immatriculation</th>
                            <th>
                                action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% vehicles.forEach(vehicle => { %>
                            <tr>
                                <td><%= vehicle.id %></td>
                                <td><%= vehicle.louee %></td>
                                <td><%= vehicle.type %></td>
                                <td><%= vehicle.immatriculation %></td>
                                <td>
                                    <button  class="btn btn-danger" onclick="window.location.href='/add'">Delete</button>

                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <button style="float: right;" class="btn btn-primary" onclick="window.location.href='/add'">add new Vehicles</button>
            </div>
        </div>
    </div>
</body>
</html>
